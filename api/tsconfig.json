{
  "compilerOptions": {
    "module": "nodenext",
    "target": "es2022",
    "rootDir": "./src",
    "moduleResolution": "nodenext",
    "outDir": "./dist",
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },

  "include": [
    "src/**/*"
  ],

  "exclude": [
    "node_modules",
    "dist"
  ]
}

